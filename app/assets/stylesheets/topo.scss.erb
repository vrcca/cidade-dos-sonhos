#topo {
  height: 300px;
  background-image: url(<%= asset_path 'fundo_topo.png' %>);
  background-position: center;
  position: relative;
  background-repeat: no-repeat;

  #menu {
    position: absolute;
    bottom: 20px;
    width: 100%;

    nav {
      position: relative;
      margin: 0 auto;
      width: 80%;

      a {
        margin-right: 20px;
      }
    }
  }
}
